<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/carouselImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/fon" />

        <TextView
            android:id="@+id/carouselTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="40dp"
            android:layout_marginTop="-15dp"
            android:letterSpacing="-0.01"
            android:text="Iphone 12"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carouselDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:letterSpacing="-0.03"
            android:text="Super.Mega.Rapido."
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="39dp"
            android:layout_marginBottom="10dp"
            android:text="@string/buy_now"
            android:textAllCaps="false"
            android:textColor="#010035" />

        <TextView
            android:id="@+id/newPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/textview_shape"
            android:letterSpacing="-0.02"
            android:text="New"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </androidx.cardview.widget.CardView>
</FrameLayout>