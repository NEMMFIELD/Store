<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="5dp">
    <ImageView
        android:id="@+id/carouselImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/fon" />

    <TextView
        android:id="@+id/carouselTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carousel_model"
        android:textColor="#FFFFFF"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-15dp"
        android:letterSpacing="-0.01"
        android:textStyle="bold"
        android:layout_gravity="center|start"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/carouselDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginStart="40dp"
        android:layout_gravity="center|start"
        android:textSize="11sp"
        android:letterSpacing="-0.03"
        android:layout_marginTop="12dp"
        android:text="Super.Mega.Rapido." />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="#010035"
        android:text="@string/buy_now" />

    <TextView
        android:id="@+id/newPhone"
        android:background="@drawable/textview_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:letterSpacing="-0.02"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:text="@string/new_patch" />
    </androidx.cardview.widget.CardView>
</FrameLayout>