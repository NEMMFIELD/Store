<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/basket_image"
        android:layout_width="111dp"
        android:layout_height="89dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/detailsphone" />

    <TextView
        android:id="@+id/basket_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/basket_model"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:letterSpacing="-0.02"
        app:layout_constraintStart_toEndOf="@+id/basket_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/basket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$3000.00"
        android:textColor="#FF6E4E"
        android:textSize="18sp"
        android:letterSpacing="-0.02"
        app:layout_constraintStart_toEndOf="@+id/basket_image"
        app:layout_constraintTop_toBottomOf="@+id/basket_model" />

    <ImageView
        android:id="@+id/icon_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/basket_model"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/counter" />

    <ImageView
        android:id="@+id/basket_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/icon_counter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/basketdelete" />
</androidx.constraintlayout.widget.ConstraintLayout>